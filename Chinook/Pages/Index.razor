@page "/"
@attribute [Authorize]

@inherits Chinook.Pages.IndexBase

<PageTitle>Index</PageTitle>

<h1 class="mb-2">Artists</h1>

<div class="mb-3">
    <label for="searchArtist">Search Artist by Name:</label>
    <input id="searchArtist" class="form-control" @bind="SearchQuery" />
    <button class="btn btn-primary mt-2" @onclick="SearchArtists">Search</button>
</div>


@if (Artists == null)
{
    <Loading />
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in FilteredArtists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.Albums.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}
